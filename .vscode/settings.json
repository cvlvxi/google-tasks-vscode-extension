// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "out": false // set this to true to hide the "out" folder with the compiled JS files
  },
  "search.exclude": {
    "out": true // set this to false to include "out" folder in search results
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "cSpell.words": [
    "Pravin",
    "VSCE",
    "activitybar",
    "devtool",
    "krishnapravin",
    "tasklist",
    "tasklists",
    "webpack'ed"
  ],
  "editor.rulers": [100],
  "workbench.colorCustomizations": {
    "bookmarks.lineBackground": "#0090F166",
    "breadcrumb.background": "#00000011",
    "breadcrumb.foreground": "#aeaeae",
    "editor.foldBackground": "#0090F111",
    "editor.lineHighlightBackground": "#0090F111",
    "editor.lineHighlightBorder": "#0090F100",
    "editor.wordHighlightBackground": "#42c13755",
    "editorCursor.background": "#000000",
    "editorCursor.foreground": "#ff5d57",
    "editorGroup.border": "#000000",
    "editorInlayHint.foreground": "#d7d7d744",
    "list.activeSelectionBackground": "#002e6355",
    "list.activeSelectionForeground": "",
    "list.focusBackground": "#002e6355",
    "list.focusForeground": "",
    "list.inactiveSelectionBackground": "#002e6355",
    "list.inactiveSelectionForeground": "",
    "minimap.background": "#00000000",
    "minimapSlider.activeBackground": "#55555577",
    "minimapSlider.background": "#55555577",
    "notebook.cellHoverBackground": "#0090F111",
    "notebook.focusedCellBackground": "#0090F144",
    "notebook.focusedCellBorder": "#ff0000",
    "notebook.outputContainerBackgroundColor": "#000000",
    "outlineMap.focusingItemBackground": "#ff5d5744",
    "outlineMap.visibleRangeBackground": "#0090F166",
    "panel.border": "#000000",
    "scrollbar.shadow": "#00000000",
    "scrollbarSlider.background": "#42c13755",
    "searchEditor.findMatchBackground": "#42c13755",
    "sideBar.border": "#000000",
    "sideBar.foreground": "#cccccc",
    "tab.activeBackground": "#42c13755",
    "tab.lastPinnedBorder": "#ff0000",
    "terminal.findMatchHighlightBackground": "#ffff0055",
    "terminal.foreground": "#ffffff"
  },
  "peacock.color": "#142d56",
  "editor.formatOnSave": true,
  "docsView.documentationView.updateMode": "sticky",
  "excalidraw.theme": "dark",
  "workbench.colorTheme": "JetBrains Rider New UI Dark",
  "workbench.iconTheme": "mizu"
}
